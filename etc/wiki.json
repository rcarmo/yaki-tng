{
    "debug": true,
    "reloader": true,
    "environment": "dev",
    "http": {
        "bind_address": "127.0.0.1",
        "port": 8000
    },
    "content": {
        "path":  "data/main",
        "homepage": "/space/HomePage"
    },
    "logging": {
        "version": 1,
        "formatters": {
            "http": {
                "format" : "localhost - - [%(asctime)s] %(process)d %(levelname)s %(message)s",
                "datefmt": "%Y/%m/%d %H:%M:%S"
            }
        },
        "handlers": {
            "console": {
                "class"    : "logging.StreamHandler",
                "formatter": "http",
                "level"    : "DEBUG",
                "stream"   : "ext://sys.stdout"
            }
        },
        "loggers": {
            "whoosh": {
                "level"   : "DEBUG",
                "handlers": ["console"]
            }
        },
        "root": {
            "level"   : "DEBUG",
            "handlers": ["console"]
        }
    }
}
